<div ng-controller="loginController" id="login" class="animate form" ng-show="showLogin==true">
    <!-- content -->
    @*<div class=container>
        <h1 class="text-center color-blue-darker">SIGN IN</h1>
    </div>*@
    <!-- Start login container -->
    <div class="container login-container">
        <div class="login-panel panel plain">
            <!-- Start .panel -->
            <div class="panel-body p0">
                <div class="text-center mb30"><img src="/css/images/logo.png" alt=logo></div>
                <form class="form-horizontal mt0" id=login-form role="form">
                    <div class=form-group>
                        <div class=col-lg-12>
                            <div class="input-group input-icon">
                                <span class="input-group-addon input-group-lg"><i class="fa fa-user fa-user-width"></i></span>
                                <input type="text" class="form-control input-lg" placeholder="User name" id="username" name="username" ng-model="userName" placeholder="Username" ng-keydown="autoLogin($event)" maxlength="100">
                            </div>
                        </div>
                    </div>
                    <div class=form-group>
                        <div class=col-lg-12>
                            <div class="input-group input-icon">
                                <span class="input-group-addon input-group-lg"><i class="fa fa-key"></i></span>
                                <input type=password class="form-control input-lg" placeholder="Password" id="password" name="password" ng-model="password" ng-keydown="autoLogin($event)" maxlength="50">
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb0">
                        <div class=col-xs-12>
                            <input type="checkbox" id="remember" class="k-checkbox" ng-model="staySignIn">
                            <label class="k-checkbox-label" for="remember">Remember me?</label>
                        </div>
                        <div class="col-xs-12 mt30">
                            <button class="btn btn-primary btn-lg btn-block uppercase" ng-click="login()"><i class="fa fa-unlock-alt mr5"></i> Login</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- End .panel -->
    </div>
    <!-- End login container -->
    <div class=container>
        <div class=footer-links>
        </div>
    </div>
    <!-- MAIN CONTENT -->
</div>